[Unit]
Description=Shoal agent
Wants=basic.target
After=basic.target network.target

[Service]
User=shoal
Group=shoal
EnvironmentFile=-/etc/sysconfig/shoal/shoal-agent
ExecStart=/bin/bash -c 'PATH=/sbin:/usr/sbin:/usr/local/bin:/usr/bin shoal-agent $${EXTRA_OPTS}'

[Install]
WantedBy=multi-user.target
